{
    "compilerOptions": {
        "baseUrl": "packages",
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es5",
        "lib": ["es5", "es2015", "dom"]
    }
}
